extends layout

block content
  h1 #{title}: #{genre.name}
  
  if genre_books.length
  
    p #[strong Delete the following book-instances before attempting to delete this genre.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Book Instances
    
      dl
      each book in genre_books
        dt 
          a(href=book.url) #{book.title}
        dd #[strong Author: ] #{book.author}
        dd #{book.isbn}

  else
    p Do you really want to delete this Genre?
    
    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre[0]._id )

      button.btn.btn-primary(type='submit') Delete